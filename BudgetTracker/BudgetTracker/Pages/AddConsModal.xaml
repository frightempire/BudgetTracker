<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetTracker.Pages.AddConsModal">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="ConsumptionNameEntry" Placeholder="Consumption"/>
            <Entry x:Name="ConsumptionPriceEntry" Placeholder="Price"/>
            <Button x:Name="SubmitConsButton" Text="Submit" Clicked="SubmitConsButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>